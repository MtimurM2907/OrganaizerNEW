<Window x:Class="Organaizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Organaizer"
        xmlns:viewmodels="clr-namespace:Organaizer"
        
        Title="Органайзер" Height="600" Width="1000" ShowInTaskbar="False">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10" Style="{DynamicResource GridStyle}" Name="MainGrid">
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button x:Name="ButtonAddTask" Content="Добавить задачу" 
                    Command="{Binding AddTaskCommand}"
                    Padding="10 5"
                    FontSize="14"
                    Margin="0 0 20 0" Click="Button_Click_2"/>
            <Button x:Name="ButtonLightTheme" Content="☀️"
                    Padding="10 5"
                    FontSize="14"
                    Style="{DynamicResource ButtonStyle}" Click="Button_Click_1"/>
            <Button x:Name="ButtonDarkTheme" Content="🌑"
                    Padding="10 5"
                    FontSize="14"
                    Style="{DynamicResource ButtonStyle}"
                    Margin="0 0 40 0" Click="Button_Click"/>

            <ComboBox x:Name="ComboBoxPriority"  ItemsSource="{Binding SortOptions}"
                    SelectedItem="{Binding SelectedSortOption}"
                    Width="150"
                    Margin="0 0 10 0"
                    FontSize="14" BorderBrush="#FFACACAC"/>

            <Button x:Name="ButtonApply" Content="Применить"
                    Command="{Binding ChangeSortingCommand}"
                    Padding="10 5"
                    FontSize="14"/>
        </StackPanel>

        <!-- Список задач -->
        <ListView x:Name="ListViewTask" ItemsSource="{Binding Tasks}"
                Grid.Row="2"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                
                Style="{DynamicResource ListViewStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Выполнено" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox  IsChecked="{Binding IsCompleted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Command="{Binding DataContext.UpdateTaskStatusCommand, 
                                                    RelativeSource={RelativeSource AncestorType=ListView}}"
                                          CommandParameter="{Binding}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Название" 
                                 DisplayMemberBinding="{Binding Title}" 
                                 Width="200"/>

                    <GridViewColumn Header="Описание" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Description}" 
                                           TextWrapping="Wrap"
                                           Margin="5"
                                           MaxWidth="300"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Дата выполнения" 
                                 DisplayMemberBinding="{Binding DueDate, StringFormat=dd.MM.yyyy HH:mm}" 
                                 Width="150"/>

                    <GridViewColumn Header="Приоритет" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Priority}"
                                           Margin="5"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Действия" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="✏️" 
                                            Command="{Binding DataContext.EditTaskCommand, 
                                                      RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Margin="2"
                                            Padding="8 2"
                                            ToolTip="Редактировать"
                                            Background="Transparent"
                                            BorderThickness="0"/>

                                    <Button Content="🗑️" 
                                            Command="{Binding DataContext.DeleteTaskCommand, 
                                                      RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding Id}"
                                            Margin="2"
                                            Padding="8 2"
                                            ToolTip="Удалить"
                                            Background="Transparent"
                                            BorderThickness="0"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>